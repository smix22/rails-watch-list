<div class="m-3">
  <div>
    <%= link_to "My Lists", lists_path, class: "btn btn-primary" %>
    <%= link_to "+ New", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container m-3 p-3">
  <div class="row">
    <div class="col-6">
      <h2><%= @list.name %></h2>
      <% @bookmarks.each do |bookmark| %>
      <div class="card p-3 my-3">
        <div>
          <h3><%= bookmark.movie.title %> (<%= bookmark.movie.rating %>)</h3>
          <p class="mt-0">"<%= bookmark.comment %>"</p>
          <%= link_to "Delete Bookmark", list_bookmark_path(@list, bookmark), data: { turbo_method: :delete }, class: "btn btn-outline-warning btn-sm" %>
        </div>
      </div>
      <% end %>
      <div><%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %></div>
    </div>
  </div>
</div>
