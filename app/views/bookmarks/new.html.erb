<div class="m-3">
  <div>
    <%= link_to "My Lists", lists_path, class: "btn btn-primary" %>
    <%= link_to "+ New", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container m-3 p-3">
  <div class="row">
    <div class="col-6">
      <h2>New Bookmark</h2>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit "Add Movie", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
